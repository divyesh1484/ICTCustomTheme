{%  block ict_blog_create %}
    <sw-page>
        {% block ict_blog_create_header %}
            <template #smart-bar-header>
                <h2>New Blog</h2>
            </template>
        {% endblock %}

        {% block ict_blog_create_actions %}
            <template #smart-bar-actions>
                <sw-button-process
                    class="ict-blog-create__save-action"
                    :is-loading="isLoading"
                    :disabled="isLoading"
                    :process-success="isSaveSuccessful"
                    variant="primary"
                    {% if VUE3 %}
                        @update:process-success="saveFinish"
                    {% else %}
                        @process-finish="saveFinish"
                    {% endif %}
                    @click.prevent="onSave"
                >
                    Save
                </sw-button-process>
            </template>
        {% endblock %}

        {% block ict_blog_create_content %}
        <template #content>
            <sw-card-view>
                {% block ict_blog_create_base_form %}
                    <sw-card title="Blog"  position-identifier="ict-blog-create-base-form"large>
                        <sw-container
                                columns="repeat(auto-fit, minmax(250px, 1fr))"
                                gap="0px 32px"
                        >
                            <sw-text-field
                                    :copyable="true"
                                    name="sw-field--blog-name"
                                    label="Name"
                                    v-model="blog.name"
                                    :required="isTitleRequired"
                                    :class="errorClass"
                                    @input="onInputRemoveClass"
                            />
                            <sw-textarea-field
                                    type="textarea"
                                    label="Description"
                                    placeholder="Blog Description"
                                    v-model="blog.description"
                            />
                        </sw-container>
                        <sw-switch-field
                                label="Active"
                                v-model="blog.active"
                        />
                        <sw-datepicker
                                date-type="datetime"
                                label="Release Date"
                                placeholder="$tc('Enter release date...')"
                                v-model="blog.releaseDate"
                        />
                        <sw-text-field
                                :copyable="true"
                                :copyableTooltip="false"
                                label="Author"
                                v-model="blog.author"
                        />
                        <sw-entity-single-select
                                label="Ict Blog Categories"
                                v-model="blog.categoryId"
                                entity="ict_category"
                        />
                        <sw-entity-multi-select
                                v-model="blog.products"
                                entity-name="product"
                                :label="$tc('Products')"
                        />
                    </sw-card>
                {% endblock %}
            </sw-card-view>
        </template>
        {% endblock %}
    </sw-page>
{% endblock %}